<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <title>Document</title>
</head>
<body>
    <div class="bg-zinc-900 w-full h-full text-white p-10">
        <div class="nav mb-10">
            <a class="text-blue-400 hover:text-blue-500" href="/">back to home</a>
        </div>

        <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
        <% if(Users.length > 0){ %>
            <div class="users flex flex-wrap gap-5">
                <% Users.forEach(function(users){ %>
                    <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-lg bg-zinc-700">
                            <img class="w-full h-full object-cover overflow-hidden" src="<%= users.image%>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%=users.name%> </h3>
                        <h5 class="text-zinc-500"><%= users.email %></h5>
                        <div class="flex justify-between mt-5">
                            <a class="text-green-300 hover:text-green-400" href="/edit/<%= users._id%>">EditUser</a>
                            <a class="text-red-400 hover:text-red-500" href="/delete/<%=users._id %>">DeleteUser</a>
                        </div>
                    </div>
                <%} ) %>
        
              
                
               </div>
        <% }else{ %>
            <h1 class="text-yellow-400 mt-5 ">No user yet</h1>
        <% }%>
      
    </div>
    
</body>
</html>