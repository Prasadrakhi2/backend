<body>
    <div class="bg-zinc-900 w-full h-full text-white p-10">

        <div class="nav mb-10">
            <a class="text-blue-400 hover:text-blue-500" href="/read">Read Users</a>
        </div>

        <h1 class="text-3xl tracking-tighter mb-3">Create User</h1>
       <form action="/create" method="post">
        <input type="text" name="name" class="px-5 py-2  border-2 border-zinc-800 outline-none rounded-lg bg-transparent" placeholder="name">

        <input type="text" name="email" class="px-5 py-2  border-2 border-zinc-800 outline-none rounded-lg bg-transparent" placeholder="emal">

        <input type="text" name="image" class="px-5 py-2  border-2 border-zinc-800 outline-none rounded-lg bg-transparent" placeholder="image Url">

        <input type="submit" value="Create user" class="px-5 py-2 bg-blue-500 rounded-lg ml-5 cursor-pointer hover:bg-blue-600 transition duration-200">
       </form>
    </div>
    
</body>
